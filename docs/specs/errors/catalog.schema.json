{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://craftcad.local/schemas/reason_catalog.schema.json",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": { "type": "string" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "code",
          "domain",
          "severity",
          "summary",
          "detail",
          "user_actions",
          "doc_link",
          "telemetry_tags"
        ],
        "properties": {
          "code": { "type": "string", "pattern": "^[A-Z]{2,8}_[A-Z0-9_]{3,64}$" },
          "domain": { "type": "string", "enum": ["CAD", "IO", "NEST", "SAVE", "DIAG", "SECURITY", "PERF", "UI"] },
          "severity": { "type": "string", "enum": ["INFO", "WARN", "ERROR", "FATAL"] },
          "summary": { "type": "string", "minLength": 3 },
          "detail": { "type": "string", "minLength": 3 },
          "user_actions": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 2 }
          },
          "doc_link": { "type": "string", "minLength": 3 },
          "telemetry_tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 2 }
          },
          "retryable": { "type": "boolean", "default": false }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
