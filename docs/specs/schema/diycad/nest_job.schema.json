{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://craftcad.local/schemas/diycad_nest_job.schema.json",
  "type": "object",
  "required": ["id", "schema_version", "created_by", "updated_at", "inputs", "sheet", "params", "result"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "schema_version": { "type": "integer", "minimum": 1 },
    "created_by": { "type": "string" },
    "updated_at": { "type": "string", "format": "date-time" },
    "inputs": { "type": "array", "items": { "type": "string", "pattern": "^parts/.+\\.json$" } },
    "sheet": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": { "type": "number", "minimum": 0 },
        "height": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "params": {
      "type": "object",
      "properties": {
        "kerf": { "type": "number", "minimum": 0 },
        "margin": { "type": "number", "minimum": 0 },
        "allow_rotate": { "type": "boolean" },
        "seed": { "type": "integer" },
        "epsilon": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "result": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["none", "ok", "failed"] },
        "placements": { "type": "array" },
        "reason_codes": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
